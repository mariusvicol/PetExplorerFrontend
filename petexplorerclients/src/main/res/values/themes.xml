<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PetExplorerMain" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Custom Rating Bar Styles with Yellow Stars -->
    <style name="YellowRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/rating_star_empty</item>
        <item name="colorControlActivated">@color/rating_star_filled</item>
    </style>

    <style name="YellowRatingBarSmall" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/rating_star_empty</item>
        <item name="colorControlActivated">@color/rating_star_filled</item>
    </style>
</resources>