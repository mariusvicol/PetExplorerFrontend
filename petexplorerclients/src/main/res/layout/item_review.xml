<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/almond"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviewerNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/playfair_display"
                android:textColor="@color/taupe"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reviewTimestampTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/playfair_display"
                android:textColor="@color/taupe"
                android:textSize="12sp" />
        </LinearLayout>

        <RatingBar
            android:id="@+id/reviewRatingBar"
            style="@style/YellowRatingBarSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/YellowRatingBarSmall"
            android:progressTint="@color/rating_star_filled"
            android:progressBackgroundTint="@color/rating_star_empty"
            android:secondaryProgressTint="@color/rating_star_background"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/reviewTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/playfair_display"
            android:textColor="@color/taupe"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>

